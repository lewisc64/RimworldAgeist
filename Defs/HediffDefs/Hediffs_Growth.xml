          <li>
            <capacity>Manipulation</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Talking</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>child</label>
        <minSeverity>0.50</minSeverity>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>teenager</label>
        <minSeverity>0.75</minSeverity>
        <capMods>
        </capMods>
      </li>
